    <%= image_tag 'elle_blanc.png', alt: 'Elle', class: 'logos_bar_gold' %>
    <%= image_tag 'les_echos_blanc_svec_trait.png', alt: 'Les Echos', class: 'logos_bar_gold' %>
    <%= image_tag 'forbes_blanc.png', alt: 'Forbes', class: 'logos_bar_gold' %>
  </div>
</div>




